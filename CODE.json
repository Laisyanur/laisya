import json
import pandas as pd
from pathlib import Path

# Path input & output
input_path = Path("data/input.json")
output_dir = Path("output")
output_dir.mkdir(exist_ok=True)
output_path = output_dir / "output.xlsx"

def json_to_excel(input_file, output_file):
    # Baca file JSON
    with open(input_file, "r", encoding="utf-8") as f:
        data = json.load(f)

    # Konversi ke Excel dengan banyak sheet
    with pd.ExcelWriter(output_file, engine="openpyxl") as writer:
        for key, value in data.items():
            df = pd.DataFrame(value)
            df.to_excel(writer, sheet_name=key, index=False)

    print(f"âœ… File berhasil dikonversi ke Excel: {output_file}")

if __name__ == "__main__":
    json_to_excel(input_path, output_path)
